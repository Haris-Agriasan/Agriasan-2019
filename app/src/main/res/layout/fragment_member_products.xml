<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:alpha="0.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/background_1_web"
            android:padding="0dp"
            android:layout_margin="0dp"
            >
        </ImageView>
    </LinearLayout>

    ///for Data

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            //left side 0.6
            <View
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                //0.1
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>


                <ListView
                    android:divider="@drawable/transparent_background"
                    android:dividerHeight="7dp"
                    android:fadeScrollbars="false"
                    android:id="@+id/list_member_inventory_products"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    />
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:elevation="5dp"
                        >
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="match_parent">
                        </View>
                        <TextView
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text="@string/nai_product_darj_karen"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8">
                        </TextView>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="match_parent">
                        </View>
                        <ImageView
                            android:src="@drawable/add_product"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent"
                            >
                        </ImageView>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent">
                        </View>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_add_product"
                        android:autoSizeMaxTextSize="22dp"
                        android:autoSizeStepGranularity="10sp"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:autoSizeTextType="uniform"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape_submit"
                        />
                </RelativeLayout>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>
            </LinearLayout>

            //right side 0.6
            <View
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>