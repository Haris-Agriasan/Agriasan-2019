<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/background_1_web"
                android:padding="0dp"
                android:layout_margin="0dp"
                >
            </ImageView>
        </LinearLayout>

        ///for Data

        <LinearLayout
            android:paddingTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/layout_add_question"
                android:orientation="horizontal"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <com.github.abdularis.civ.CircleImageView
                    android:id="@+id/add_question_button"
                    app:highlightColor="#B6B1B1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/new_question"
                    app:strokeColor="@color/white"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp"
                    app:strokeWidth="6px"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </View>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <ImageView
                            android:layout_weight="7"
                            android:src="@drawable/microphone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            >
                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <View
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>
                        <TextView
                            android:autoSizeTextType="uniform"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal|top"
                            android:text="سوال\nپوچھیں؟"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </TextView>
                        <View
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>

                    </LinearLayout>
                    <View
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </View>
                </LinearLayout>




            </RelativeLayout>
            <View
                android:id="@+id/view_space"
                android:layout_weight="1.7"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal">
                <View
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </View>
                <ListView
                    android:divider="@drawable/transparent_background"
                    android:dividerHeight="5dp"
                    android:id="@+id/list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.6"
                    />
                <View
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </View>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
            </View>

        </LinearLayout>


</RelativeLayout>