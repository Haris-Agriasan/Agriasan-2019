<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        // for background fixed image
        <LinearLayout
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/background_1_web"
                android:padding="0dp"
                android:layout_margin="0dp"
                >
            </ImageView>
        </LinearLayout>

        ///for Data

        <LinearLayout
            android:paddingTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>

            <LinearLayout
                android:layout_weight="9"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>
                <LinearLayout
                    android:background="@drawable/question_answer_back"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <View
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>

                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <View
                            android:background="@drawable/left_gray_title_background"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>

                        <TextView
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:autoSizeTextType="uniform"
                            android:textStyle="bold"
                            android:text="آپکی تفصیل"
                            android:layout_weight="6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </TextView>

                        <View
                            android:background="@drawable/right_gray_title_background"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>
                    </LinearLayout>

                    <View
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </View>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:id="@+id/text_name_user"
                                android:gravity="center_vertical|right"
                                android:textColor="#504E4E"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="20dp"
                                android:text="مبشر لقمان"
                                android:layout_weight="6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </TextView>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:gravity="center_vertical|right"
                                android:textColor="#504E4E"
                                android:autoSizeTextType="uniform"
                                android:text="نام"
                                android:layout_weight="3.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </TextView>
                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:autoSizeMaxTextSize="20dp"
                                android:id="@+id/text_city_user"
                                android:gravity="center_vertical|right"
                                android:textColor="#504E4E"
                                android:autoSizeTextType="uniform"
                                android:text="لاہور"
                                android:layout_weight="6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </TextView>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:gravity="center_vertical|right"
                                android:textColor="#504E4E"
                                android:autoSizeTextType="uniform"
                                android:text="شہر/ ضلع"
                                android:layout_weight="3.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </TextView>
                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:autoSizeMaxTextSize="20dp"
                                android:id="@+id/text_phone_user"
                                android:gravity="center_vertical|right"
                                android:textColor="#504E4E"
                                android:autoSizeTextType="uniform"
                                android:text="03214567897"
                                android:layout_weight="6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </TextView>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:gravity="center_vertical|right"
                                android:textColor="#504E4E"
                                android:autoSizeTextType="uniform"
                                android:text="فون نمبر"
                                android:layout_weight="3.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </TextView>
                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>
                <LinearLayout
                    android:background="@drawable/question_answer_back"
                    android:orientation="vertical"
                    android:layout_weight="3.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <View
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>

                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <View
                            android:background="@drawable/left_gray_title_background"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>

                        <TextView
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:autoSizeTextType="uniform"
                            android:textStyle="bold"
                            android:text="اپنا پیغام لکھیں"
                            android:layout_weight="6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </TextView>

                        <View
                            android:background="@drawable/right_gray_title_background"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>
                    </LinearLayout>

                    <View
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </View>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <EditText
                                android:id="@+id/edittext_message_user"
                                android:textColor="#504E4E"
                                android:layout_weight="10.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </EditText>
                            <View
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>

                //just to add button enter and stuff .7
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7">
                    //layout for button and icon
                    <RelativeLayout
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="10"
                            android:orientation="horizontal"
                            android:elevation="5dp"
                            >
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8">
                            </View>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="match_parent"
                                android:src="@drawable/enter"
                                >
                            </ImageView>
                        </LinearLayout>

                        <Button
                            android:id="@+id/message_btn_contact_us"
                            android:layout_marginBottom="3dp"
                            android:text="@string/enter"
                            android:autoSizeMaxTextSize="30dp"
                            android:autoSizeStepGranularity="10sp"
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            android:autoSizeTextType="uniform"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonshape_submit"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>
                <LinearLayout
                    android:background="@drawable/question_answer_back"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <View
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="0.55"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <View
                            android:background="@drawable/left_gray_title_background"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>

                        <TextView
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:autoSizeTextType="uniform"
                            android:textStyle="bold"
                            android:text="ہم سے رابطہ کریں"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </TextView>

                        <View
                            android:background="@drawable/right_gray_title_background"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </View>
                    </LinearLayout>

                    <View
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </View>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:textColor="#504E4E"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="0300-6801388"
                                android:layout_weight="9.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </TextView>
                            <View
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <ImageView
                                android:id="@+id/btn_call_team"
                                android:background="@drawable/buttonshape_call_curve"
                                android:scaleType="fitCenter"
                                android:src="@drawable/phone_call"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </ImageView>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </View>


                </LinearLayout>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </View>


                <!--                <View-->
<!--                    android:background="@drawable/question_answer_back"-->
<!--                    android:layout_weight="2"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="0dp">-->

<!--                </View>-->


            </LinearLayout>

            <View
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>