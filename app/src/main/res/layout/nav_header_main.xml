<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >
    <LinearLayout
        android:layout_weight="0.8"
        android:background="@drawable/side_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </View>
            <RelativeLayout
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="250dp">

                    <ImageView
                        android:scaleType="centerCrop"
                        app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/btn_fasal_select_page"
                        android:src="@drawable/pencil"
                        android:background="@drawable/pencil_icon_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:ignore="MissingConstraints">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <com.github.abdularis.civ.CircleImageView
                    android:id="@+id/profile_image"
                    app:highlightColor="@color/yellow"
                    android:contentDescription="@string/nav_header_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:strokeWidth="6px"
                    />
            </RelativeLayout>

<!--            <ImageView-->
<!--                android:id="@+id/profile_image"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                android:layout_weight="6"-->
<!--                android:contentDescription="@string/nav_header_desc"-->
<!--                app:srcCompat="@mipmap/ic_launcher_round" />-->

            <TextView
                android:textStyle="bold"
                android:textColor="#ffff"
                android:layout_weight="2"
                android:gravity="center"
                android:id="@+id/text_name_city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/_12ssp"

                />
            <TextView
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/phn_no"
                />
            <TextView

                android:text="0324-4601544"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:layout_weight="2"
                android:gravity="center"
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/_12ssp"
                />
            <TextView
                android:textStyle="bold"
                android:textColor="#ffff"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/id_card_number"
                android:textSize="@dimen/_12ssp"

                />
            <TextView
                android:text="35202-0249949-7"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:layout_weight="2"
                android:gravity="center"
                android:id="@+id/text_id_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/_12ssp"

                />
            />
            <View
                android:layout_weight="1.1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </View>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        >
        <View
            android:background="#0000"
            android:id="@+id/v1_upper"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <LinearLayout
            android:background="@drawable/background_nav_header_item"
            android:id="@+id/layout_cart"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:textStyle="bold"
                android:clickable="false"
                android:textAlignment="viewEnd"
                android:id="@+id/btn_cart"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:text="@string/cart"
                android:background="#0000"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="#0000"
                android:id="@+id/view_left_cart"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
            <ImageView
                android:background="#0000"
                android:id="@+id/img_cart"
                android:src="@drawable/cart"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
            <View
                android:background="#0000"
                android:id="@+id/view_right_cart"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
        </LinearLayout>
        <View
            android:background="#0000"
            android:id="@+id/v1_down"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <View
            android:background="@color/black"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>

        <View
            android:background="#0000"
            android:id="@+id/v2_upper"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <LinearLayout
            android:background="@drawable/background_nav_header_item"
            android:id="@+id/layout_orders"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:textStyle="bold"
                android:clickable="false"
                android:textAlignment="viewEnd"
                android:id="@+id/btn_orders"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:text="@string/your_orders"
                android:background="#0000"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="#0000"
                android:id="@+id/view_left_orders"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
            <ImageView
                android:background="#0000"
                android:id="@+id/img_orders"
                android:src="@drawable/orders"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
            <View
                android:background="#0000"
                android:id="@+id/view_right_orders"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
        </LinearLayout>
        <View
            android:background="#0000"
            android:id="@+id/v2_down"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <View
            android:background="@color/black"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>

        <View
            android:background="#0000"
            android:id="@+id/v3_upper"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <LinearLayout
            android:background="@drawable/background_nav_header_item"
            android:id="@+id/layout_contact_us"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:textStyle="bold"
                android:clickable="false"
                android:textAlignment="viewEnd"
                android:id="@+id/btn_contact_us"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:text="@string/ham_say_rabta_karen"
                android:background="#0000"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="#0000"
                android:id="@+id/view_left_headphone"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
            <ImageView
                android:background="#0000"
                android:id="@+id/img_headphone"
                android:src="@drawable/headphone"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
            <View
                android:background="#0000"
                android:id="@+id/view_right_headphone"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
        </LinearLayout>
        <View
            android:background="#0000"
            android:id="@+id/v3_down"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <View
            android:background="@color/black"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>

        <View
            android:background="#0000"
            android:id="@+id/v4_upper"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <LinearLayout
            android:background="@drawable/background_nav_header_item"
            android:id="@+id/layout_deliver_orders"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:textStyle="bold"
                android:clickable="false"
                android:textAlignment="viewEnd"
                android:id="@+id/btn_products_orders"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:text="@string/orders_to_deliver"
                android:background="#0000"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="#0000"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
            <ImageView
                android:background="#0000"
                android:src="@drawable/deliver_orders"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
            <View
                android:background="#0000"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
        </LinearLayout>

        <View
            android:background="#0000"
            android:id="@+id/v4_down"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <View
            android:background="@color/black"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <View
            android:id="@+id/v5_upper"
            android:background="#0000"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>
        <LinearLayout
        android:background="@drawable/background_nav_header_item"
        android:id="@+id/layout_logout"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:textStyle="bold"
            android:clickable="false"
            android:textAlignment="viewEnd"
            android:id="@+id/btn_logout"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:text="@string/logout_karen"
            android:background="#0000"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#0000"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </View>
        <ImageView
            android:background="#0000"
            android:src="@drawable/logout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </ImageView>
        <View
            android:background="#0000"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </View>
    </LinearLayout>

        <View
            android:id="@+id/v5_down"
            android:background="#0000"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </View>

    </LinearLayout>


</LinearLayout>
