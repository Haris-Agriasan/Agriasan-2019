<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="@drawable/question_answer_back"
    >

    //linear lay out for pic question and answer
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.9"
        android:orientation="horizontal"
        >
        /9.6
        //for details of question like name city time
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //for name city and fasal
            //0.8
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                //5
                //question ki fasal
                <TextView
                    android:gravity="center_vertical|left"
                    android:text="Makai"
                    android:textStyle="bold"
                    android:id="@+id/textview_fasal_member_home"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>

                //5
                //name and lahore of person asking question
                <TextView
                    android:text="@string/asked_question_number"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:textColor="#3BAE49"
                    android:id="@+id/question_number"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                </TextView>

            </LinearLayout>

            //1.5
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/recording_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@drawable/buttonshape_add_recording"
                >
                <TextView
                    android:gravity="center"
                    android:id="@+id/player_time"
                    android:textColor="#fff"
                    android:autoSizeTextType="uniform"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
                <SeekBar
                    android:id="@+id/seek_bar_member_home"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </SeekBar>
                <ImageView
                    android:id="@+id/play_question_member_home"
                    android:src="@drawable/play"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>
                <ImageView
                    android:id="@+id/pause_question_member_home"
                    android:src="@drawable/pause"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>


            </LinearLayout>

            //0.2
            <View
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </View>
            ////for images
            //3.5
            <LinearLayout
                android:id="@+id/layout_images"
                android:orientation="horizontal"
                android:layout_weight="3.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <com.comix.rounded.RoundedCornerImageView
                    android:scaleType="centerCrop"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/question_image_0_member_home"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    app:cornerBottomDisable="false"
                    app:cornerLeftDisable="false"
                    app:cornerRightDisable="false"
                    app:cornerTopDisable="false"
                    app:cornerRadius="4dp"
                    android:alpha="1"
                    android:src="@drawable/carrot"
                    />

                <View
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </View>
                <RelativeLayout
                    android:background="@drawable/rounded_background_images"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.comix.rounded.RoundedCornerImageView
                        android:scaleType="centerCrop"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/question_image_1_member_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerRadius="4dp"
                        android:alpha="1"
                        android:src="@drawable/corn"
                        />

                </RelativeLayout>

                <View
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </View>
                <RelativeLayout
                    android:background="@drawable/rounded_background_images"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.comix.rounded.RoundedCornerImageView
                        android:scaleType="centerCrop"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/question_image_2_member_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerRadius="4dp"
                        android:alpha="1"
                        android:src="@drawable/beetroot"

                        />

                </RelativeLayout>



            </LinearLayout>

            //1
            //for static sawal
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <View
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </View>
                //name and lahore of person asking question
                <TextView
                    android:id="@+id/apka_masla"
                    android:gravity="center_vertical|end"
                    android:autoSizeTextType="uniform"
                    android:text="آپکا مسئلہ یہ ہے"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:textAlignment="viewEnd"
                    android:textColor="#3BAE49"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            //2.5
            //for description
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="tou sawal kuch is tarha k mere pas ek fasal hai gandum ki or wo kharab ho gai hai"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:id="@+id/textview_question_member_home"
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </TextView>


            //for time
            <TextView
                android:gravity="center_vertical|right"
                android:autoSizeTextType="uniform"
                android:text="paanch ghnatay qabal"
                android:textStyle="bold"
                android:id="@+id/textview_question_time_member_home"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </TextView>


        </LinearLayout>

    </LinearLayout>

    //0.1
    <View
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </View>

    //1
        //just fot button
    <LinearLayout
        android:id="@+id/layout_wait_for_answer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
        </View>


        //layout for button and icon
        <RelativeLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="horizontal"
                android:elevation="5dp"
                >
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>
            </LinearLayout>

            <Button
                android:text="جواب کا انتظار کریں!"
                android:layout_marginBottom="3dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeStepGranularity="10sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonshape_delete"
                />
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
        </View>
        <RelativeLayout
            android:id="@+id/view_your_question"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="horizontal"
                android:elevation="5dp"
                >
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>
            </LinearLayout>

            <Button
                android:clickable="false"
                android:text="سوال دیکھیں!"
                android:layout_marginBottom="3dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeStepGranularity="10sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonshape_submit"
                />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_see_answer"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
            </View>


            //layout for button and icon
            <RelativeLayout
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5">
                    </View>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/awami_raye_detail_button"
                        >
                    </ImageView>
                </LinearLayout>

                <Button
                    android:id="@+id/button_see_answer_member_home"
                    android:layout_marginBottom="3dp"
                    android:text="جواب دیکھیں!"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeStepGranularity="10sp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonshape_submit"
                    />
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
