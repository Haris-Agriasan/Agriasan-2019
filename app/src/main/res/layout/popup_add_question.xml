<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        // for background fixed image
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/background_1_web"
                android:padding="0dp"
                android:layout_margin="0dp"
                >
            </ImageView>
        </LinearLayout>

        ///for Data

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                //left side 0.6
                <View
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </View>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"></View>

                    //selected Fasal  0.5
                    <LinearLayout
                        android:id="@+id/layout_fasal_change"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:background="@drawable/selected_fasal_type_background"
                        >

                        //pencil editing icon
                        <ImageView

                            android:background="@drawable/pencil_icon_background"
                            android:src="@drawable/pencil"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent">

                        </ImageView>


                        <TextView
                            android:layout_marginRight="1dp"
                            android:gravity="right"
                            android:textColor="#000"
                            android:autoSizeTextType="uniform"
                            android:id="@+id/textview_fasal_name"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>

                        //pencil editing icon
                        <RelativeLayout
                            android:layout_weight="1.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:text="@string/fasal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </TextView>

                            <TextView
                                android:textFontWeight="5"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:background="@drawable/fasal_type_tittle_icon_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </TextView>

                        </RelativeLayout>



                    </LinearLayout>

                    //0.1
                    <View
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>

                    //selected Fasal 0.5
                    <LinearLayout
                        android:id="@+id/layout_question_type_change"

                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:background="@drawable/selected_fasal_type_background"
                        >

                        //pencil editing icon
                        <ImageView
                            android:background="@drawable/pencil_icon_background"
                            android:src="@drawable/pencil"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent">

                        </ImageView>

                        <TextView
                            android:layout_marginRight="1dp"
                            android:gravity="right"
                            android:textColor="#000"
                            android:autoSizeTextType="uniform"
                            android:id="@+id/textview_fasal_type"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>

                        //pencil editing icon
                        <RelativeLayout
                            android:layout_weight="1.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:text="@string/fasal_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </TextView>

                            <TextView
                                android:textFontWeight="5"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:background="@drawable/fasal_type_tittle_icon_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </TextView>

                        </RelativeLayout>



                    </LinearLayout>

                    //0.1
                    <View
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>

                    //just to add button recording question and stuff 0.7
                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6">

                        //layout for button and icon
                        <RelativeLayout
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="10"
                                android:orientation="horizontal"
                                android:elevation="5dp"
                                >
                                <ImageView
                                    android:id="@+id/play_recording"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/play"
                                    >
                                </ImageView>
                                <TextView
                                    android:id="@+id/record_text"
                                    android:autoSizeTextType="uniform"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">
                                </TextView>
                                <ImageView
                                    android:id="@+id/record_icon"
                                    android:clickable="false"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/microphone"
                                    >
                                </ImageView>
                                <ImageView
                                    android:id="@+id/stop_icon"
                                    android:clickable="true"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/stop"
                                    >
                                </ImageView>
                            </LinearLayout>

                            <Button
                                android:id="@+id/recording_start"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeStepGranularity="10sp"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:autoSizeTextType="uniform"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonshape_add_recording"
                                />

                            <Chronometer
                                android:gravity="center"
                                android:id="@+id/chronometer_time"
                                android:textColor="#ffff"
                                android:layout_width="match_parent"
                                android:autoSizeTextType="uniform"
                                android:layout_centerHorizontal="true"
                                android:layout_height="match_parent"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                    //0.1
                    <View
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>

                    //3
                    <LinearLayout
                        android:background="@drawable/question_answer_back"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="10"
                        android:orientation="vertical"
                        >

                        //0.25
                        <View
                            android:layout_weight="0.25"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </View>

                        //pics text  1.8
                        <LinearLayout
                            android:weightSum="10"
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            >

                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/left_gray_title_background"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </View>
                            <TextView
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="تصاویر لیں"
                                android:layout_weight="4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </TextView>

                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/right_gray_title_background"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"></View>

                        </LinearLayout>

                        //0.25
                        <View
                            android:layout_weight="0.25"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </View>

                        //section of pics 7.1
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="7.1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            >

                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </View>
<!--                            android:background="@drawable/background_for_choosing_fasal"-->

                            <RelativeLayout
                                android:id="@+id/layout_show_images"
                                android:layout_weight="6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/show_images_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </ImageView>
                                <TextView
                                    android:textStyle="bold"
                                    android:id="@+id/total_images"
                                    android:padding="20dp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </TextView>

                            </RelativeLayout>

                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </View>
                            <RelativeLayout
                                android:background="@drawable/rounded_background_images"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">


                                <ImageView
                                    android:background="@drawable/selected_fasal_type_background"
                                    android:scaleType="centerCrop"
                                    android:alpha="0.4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </ImageView>

                                <LinearLayout
                                    android:weightSum="10"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <View
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent">
                                    </View>

                                    //For three buttons
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_weight="8"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent">
                                        <View
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp">
                                        </View>
                                        <ImageButton
                                            android:scaleType="fitXY"
                                            android:id="@+id/btn_delete_images"
                                            android:background="@drawable/transparent_background"
                                            android:src="@drawable/delete_basket"
                                            android:layout_weight="3"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp">

                                        </ImageButton>
                                        <View
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp">
                                        </View>
                                        <ImageButton
                                            android:scaleType="fitXY"
                                            android:id="@+id/select_images_btn"
                                            android:background="@drawable/transparent_background"
                                            android:src="@drawable/gallery_3"
                                            android:layout_weight="3"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp">
                                        </ImageButton>
                                        <View
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp">
                                        </View>


                                    </LinearLayout>

                                    <View
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent">
                                    </View>

                                </LinearLayout>


                            </RelativeLayout>
                            <View
                                android:layout_weight="0.25"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </View>
                        </LinearLayout>


                        //0.25
                        <View
                            android:layout_weight="0.25"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </View>
                    </LinearLayout>

                    //0.1
                    <View
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>

                    //3
                    <LinearLayout
                        android:background="@drawable/question_answer_back"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="10"
                        android:orientation="vertical"
                        >

                        <View
                            android:layout_weight="0.25"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </View>

                        //pics text
                        <LinearLayout
                            android:layout_weight="1.8"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            >

                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/left_gray_title_background"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            </View>
                            <TextView
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="سوال کی تفصیل لکھیں"
                                android:layout_weight="6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                            </TextView>

                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/right_gray_title_background"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"></View>

                        </LinearLayout>

                        <View
                            android:layout_weight="0.3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </View>

                        <EditText
                            android:hint="میرا مسلہ یہ ہے"
                            android:gravity="top|end"
                            android:textAlignment="viewEnd"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:longClickable="true"
                            android:textColor="#000"
                            android:autoSizeTextType="uniform"
                            android:id="@+id/question_detail"
                            android:layout_weight="7.4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </EditText>

                    </LinearLayout>

                    //0.1
                    <View
                        android:layout_weight="0.1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </View>


                    //just to add button enter and stuff .7
                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7">
                        //layout for button and icon
                        <RelativeLayout
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="10"
                                android:orientation="horizontal"
                                android:elevation="5dp"
                                >
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">
                                </View>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/enter"
                                    >
                                </ImageView>
                            </LinearLayout>

                            <Button
                                android:id="@+id/add_question_final_button"
                                android:layout_marginBottom="3dp"
                                android:text="@string/enter"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeStepGranularity="10sp"
                                android:textColor="#FFFFFF"
                                android:textAlignment="center"
                                android:autoSizeTextType="uniform"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonshape_submit"
                                />
                        </RelativeLayout>
                    </LinearLayout>



                </LinearLayout>


                //right side 0.6
                <View
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </View>


            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>