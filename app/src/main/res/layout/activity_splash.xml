<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash"
    >

    <LinearLayout
        android:alpha="0.8"
        android:background="@drawable/background_1_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="10"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </View>
            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="center"
                >
            </ImageView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:weightSum="10"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </View>
            <ImageView
                android:src="@drawable/only_name_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="center"
                >
            </ImageView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:weightSum="10"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </View>
            <ImageView
                android:clickable="true"
                android:src="@drawable/welcome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="center"
                >
            </ImageView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >
        </View>

        <!--    Text after welcome-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

            </View>

            <TextView
                android:autoSizeStepGranularity="10sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.6"
                android:text="@string/ager_aap_pehlay_say_member_hain"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                >
            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

            </View>

            <TextView
                android:autoSizeStepGranularity="10sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.6"
                android:text="@string/tou_apna_no_darj_karen"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                >
            </TextView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

            </View>

        </LinearLayout>

        <!--    text after welcome end-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            ></View>

        <!--    Text view for phone Number-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>

            <!--        Right side text Phone Number-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.6">



                <View
                    android:clickable="false"
                    android:text=""
                    android:textColor="#83464444"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittextshape"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </View>

                    <EditText
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:longClickable="false"
                        android:id="@+id/phone_edittext"
                        android:hint="@string/phn_hint"
                        android:maxLength="12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="#F2666866"
                        android:inputType="number"
                        android:textAlignment="viewStart"
                        android:autoSizeTextType="uniform"
                        android:background="@android:color/transparent"
                        >
                    </EditText>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">
                    </View>
                    <LinearLayout
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <View
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </View>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:textColor="#3BAE49"
                            android:gravity="center"
                            android:text="@string/phn_no"
                            android:autoSizeTextType="uniform"
                            android:textStyle="bold"
                            >
                        </TextView>
                        <View
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                        </View>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">
                    </View>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >
        </View>


        <!--    Submit button / login button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.6">

                <!--            ENTER BUTTON-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5">
                    </View>
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:autoSizeTextType="uniform"
                        android:text="@string/sign_in"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </TextView>
                    <ImageView
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:src="@drawable/enter"
                        >
                    </ImageView>
                    <View
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </View>
                </LinearLayout>
                <Button
                    android:clickable="false"
                    android:id="@+id/enter_icon"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/for_white_stroke"
                    />
                <Button
                    android:id="@+id/phone_submit_button"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:autoSizeStepGranularity="10sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/buttonshape_sign_in"

                    />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6">

            </View>

            <TextView
                android:paddingBottom="0dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.8"
                android:text="@string/ager_aap_new_member_hain"
                android:textAlignment="center"
                android:autoSizeStepGranularity="10sp"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal|bottom"
                android:textColor="@android:color/black"
                >
            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6">

            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.6">

                <!--            ENTER BUTTON-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5">
                    </View>
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:autoSizeTextType="uniform"
                        android:text="@string/register_karen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:targetApi="o">
                    </TextView>
                    <ImageView
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:src="@drawable/register"
                        >
                    </ImageView>
                    <View
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </View>
                </LinearLayout>

                <Button
                    android:clickable="false"
                    android:id="@+id/register_icon"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/for_white_stroke"
                    />

                <Button
                    android:id="@+id/register_member_button"
                    android:clickable="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FFFFFF"
                    android:autoSizeStepGranularity="10sp"

                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textAlignment="center"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/buttonshape_member_register"

                    />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

            </View>

            <TextView
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.6"
                android:text="@string/agri_cultural_expert_yaha"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center_horizontal|bottom"
                android:textColor="@android:color/black"
                >
            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.6">

                <!--            ENTER BUTTON-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5">
                    </View>
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:autoSizeTextType="uniform"
                        android:text="@string/register_karen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:targetApi="o">
                    </TextView>
                    <ImageView
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:src="@drawable/register_domain"
                        ></ImageView>
                    <View
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </View>
                </LinearLayout>

                <Button
                    android:clickable="false"
                    android:id="@+id/register_domain_icon"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/for_white_stroke"
                    />

                <Button
                    android:id="@+id/register_domain_button"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:autoSizeStepGranularity="10sp"
                    android:textColor="#FFFFFF"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textAlignment="center"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/buttonshape_domain_register"

                    />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >
        </View>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>
            <RelativeLayout
                android:id="@+id/change_lang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.6">

                <!--            ENTER BUTTON-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1">
                    </View>
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:autoSizeTextType="uniform"
                        android:text="@string/select_language"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:targetApi="o">
                    </TextView>
                    <ImageView
                        android:src="@drawable/language_icon"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        >
                    </ImageView>
                    <View
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </View>
                </LinearLayout>

                <Button
                    android:background="@drawable/transparent_background_2"
                    android:clickable="false"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >
        </View>

    </LinearLayout>


</RelativeLayout>