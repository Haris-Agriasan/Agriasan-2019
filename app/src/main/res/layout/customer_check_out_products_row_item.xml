<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main_parent"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/question_answer_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.6"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </View>
                <TextView
                    android:text="product name"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#3BAE49"
                    android:id="@+id/textview_name_of_product"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >

                </TextView>
            <View
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.05"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <View
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </View>

                <View
                    android:background="#8D8C8C"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </View>

                <View
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </View>

            </LinearLayout>
            <View
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </View>
            //name and lahore of person asking question
            <TextView
                android:text="product Price"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:id="@+id/textview_product_price"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >

            </TextView>
            <View
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </View>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.05"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <View
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </View>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="#8D8C8C"></View>

                <View
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </View>

            </LinearLayout>
            <View
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </View>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                //time
                <TextView
                    android:textColor="#635555"
                    android:text="3 litre"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/textview_product_quantity"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>

                <TextView
                    android:textColor="#635555"
                    android:text="3*price=RS. 450"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/textview_total_price"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

            <View
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </View>


        </LinearLayout>

        <View
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </View>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_image_of_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/corn"
                app:civ_border_color="#FF000000"/>
        </LinearLayout>





    </LinearLayout>




</LinearLayout>
