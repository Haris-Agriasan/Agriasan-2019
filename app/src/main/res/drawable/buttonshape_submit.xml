<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#E0BF2B" android:startColor="#E0BF2B" />
            <corners android:radius="7dp" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#3BAE49" android:startColor="#6CCA78" />
            <corners android:radius="7dp" />
        </shape>

    </item>
</selector>
